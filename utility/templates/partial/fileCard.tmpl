<div class = "post">
    <div class="meta">{{ dateFormat "Jan 2, 2006" .Date }}</div>
    <a class="title" href="{{ .RelPermalink }}">{{.Title}}</a> &mdash;
    <span class="description">
        {{ if isset .Params "description" }}
            {{ .Description }}
        {{ else if gt (len .Content) 120 }}
            {{ slicestr .Content 0 120 }}...
        {{ else }}
            {{ .Content }}
        {{ end }}
    </span>
</div>
